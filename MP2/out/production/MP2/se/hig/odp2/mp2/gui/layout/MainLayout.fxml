                        <Button text="Add Course" onAction="#addCourse"></Button>
                    </HBox>
                </VBox>
            </Tab>
            <Tab text="Student" closable="false">
                <HBox>
                    <Button text="Register Student" onAction="#registerStudent"></Button>
                    <Button text="Unregister Student" onAction="#unregisterStudent"></Button>
